{% extends '::admin.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Quản trị viên</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="{{ path('amz_dashboard') }}">Dashboard</a></li>
                    <li><a href="{{ path('amz_user_index') }}">Quản trị viên</a></li>
                    <li class="active">Tạo mới</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
        <form action="" method="post">
            <div class="row">
                <div class="col-sm-12 col-xs-12 m-b-15">
                    <button class="btn btn-success waves-effect waves-light m-r-10" type="submit">Lưu</button>
                    <button class="btn btn-inverse waves-effect waves-light" type="button" onclick="window.location.href = '{{ path('amz_user_index') }}'">Hủy</button>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="white-box">
                        <div class="row">
                            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label for="post_lang1_isFeatured">Họ tên *</label>
                                    {{ form_widget(form.fullName) }}
                                    <div class="amz-error">
                                        {{ form_errors(form.fullName) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="post_lang1_isFeatured">Điện thoại</label>
                                    {{ form_widget(form.phone) }}
                                    <div class="amz-error">
                                        {{ form_errors(form.phone) }}
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="post_lang1_isFeatured">Địa chỉ</label>
                                    {{ form_widget(form.address) }}
                                    <div class="amz-error">
                                        {{ form_errors(form.address) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_rest(form) }}
        </form>
        <!-- row -->
    </div>
{% endblock %}