<div class="col-sm-12 col-xs-12">
    <div class="white-box">
        <h3>SEO</h3>
        <ul class="nav customtab nav-tabs" role="tablist">
            <li role="presentation" class="active">
                <a href="#google" aria-controls="home" role="tab" data-toggle="tab" aria-expanded="true">
                    <span class="visible-xs"><i class="ti-google"></i></span><span class="hidden-xs"> Google</span>
                </a>
            </li>
            <li role="presentation" class="">
                <a href="#facebook" aria-controls="profile" role="tab" data-toggle="tab" aria-expanded="false">
                    <span class="visible-xs"><i class="ti-facebook"></i></span> <span class="hidden-xs">Facebook</span>
                </a>
            </li>
        </ul>
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane fade active in" id="google">
                <div class="col-md-7">
                    <div class="form-group">
                        <label for="post_lang1_slug">Tiêu đề</label>
                        {{ form_widget(form.seo.title) }}
                    </div>
                    <div class="form-group">
                        <label for="post_lang1_slug">Từ khóa</label>
                        {{ form_widget(form.seo.meta_keyword) }}
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="post_lang1_slug">Mô tả</label>
                        {{ form_widget(form.seo.meta_description) }}
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
            <div role="tabpanel" class="tab-pane fade" id="facebook">
                <div class="col-md-7">
                    <div class="form-group">
                        <label for="post_lang1_slug">Tiêu đề</label>
                        {{ form_widget(form.seo.facebook_title) }}
                    </div>
                    <div class="form-group">
                        <label for="post_lang1_slug">Mô tả</label>
                        {{ form_widget(form.seo.facebook_description) }}
                    </div>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label for="post_lang1_slug">Hình ảnh</label>
                        {{ form_widget(form.seo.facebook_thumbnail) }}
                        <div>
                            <img height="181px" title="Nhấn chọn hình khác"
                                 class="image-browser-btn facebook-thumbnail-img"
                                 data-hidden-class=".facebook-thumbnail"
                                 src="{{ asset('backend/assets/img/browser.png') }}"/>
                        </div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>