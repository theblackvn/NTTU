<div class="col-lg-10 col-md-21 col-sm-6 col-xs-12">
    <div class="white-box">
        <div class="row">
            <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                    <label for="product_lang1_title1">Tên học sinh <span class="required-field">*</span></label>
                    {{ form_widget(form.name) }}
                    <div class="amz-error">
                        {{ form_errors(form.name) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="product_lang1_slug">Địa chỉ</label>
                    {{ form_widget(form.address) }}
                    <div class="amz-error">
                        {{ form_errors(form.address) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="product_lang1_isFeatured">Thành phố</label>
                    {{ form_widget(form.city) }}
                    <div class="amz-error">
                        {{ form_errors(form.city) }}
                    </div>
                </div>
                <div class="form-group district-block">
                    <label for="product_lang1_isFeatured">Quận huyện</label>
                    {{ form_widget(form.district) }}
                    <div class="amz-error">
                        {{ form_errors(form.district) }}
                    </div>
                </div>
            </div>
            <div class="col-sm-6 col-xs-12">
                <div class="form-group">
                    <label for="product_lang1_slug">Điện thoại</label>
                    {{ form_widget(form.phone) }}
                    <div class="amz-error">
                        {{ form_errors(form.phone) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="product_lang1_slug">Ngày sinh</label>
                    {{ form_widget(form.dateOfBirth) }}
                    <div class="amz-error">
                        {{ form_errors(form.dateOfBirth) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="product_lang1_slug">Email</label>
                    {{ form_widget(form.email) }}
                    <div class="amz-error">
                        {{ form_errors(form.email) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="product_lang1_slug">Giới tính</label>
                    {{ form_widget(form.gender) }}
                    <div class="amz-error">
                        {{ form_errors(form.gender) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>