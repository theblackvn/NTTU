{% extends '::admin.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Quản lý media</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <a href="{{ path('amz_media_create') }}"
                   class="btn btn-danger pull-right m-l-20 btn-rounded btn-outline hidden-xs hidden-sm waves-effect waves-light">Tạo
                    mới</a>
                <ol class="breadcrumb">
                    <li><a href="{{ path('amz_dashboard') }}">Dashboard</a></li>
                    <li class="active">Quản lý Media</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                <div class="white-box">
                    {#{% for flash_message in app.session.flashbag.get('notice') %}#}
                        {#<div class="alert alert-success">#}
                            {#{{ flash_message }}#}
                        {#</div>#}
                    {#{% endfor %}#}
                    {% for flash_message in app.session.flashbag.get('error') %}
                        <div class="alert alert-danger">
                            {{ flash_message }}
                        </div>
                    {% endfor %}
                    <div class="table-responsive">
                        <table class="table product-overview">
                            <thead>
                            <tr>
                                <th colspan="2">Mô tả</th>
                                <th width="350">Title</th>
                                <th width="70">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for entity in pagination %}
                                <tr>
                                    <td width="100">
                                        {% if entity.link is not empty %}
                                            {{ entity.link }}
                                        {% endif %}
                                    </td>
                                    <td>{{ entity.content|raw }}</td>
                                    <td>{{ entity.title }}</td>
                                    <td>
                                        <a href="{{ path('amz_media_edit', {'id': entity.id}) }}"
                                           class="text-inverse p-r-10"
                                           data-toggle="tooltip" title="Edit"><i class="ti-marker-alt"></i></a> <a
                                                href="{{ path('amz_media_delete', {'id': entity.id}) }}"
                                                class="text-inverse p-r-10" title="Delete"
                                                onclick="return confirm('Are you sure ?');"
                                                data-toggle="tooltip"><i class="ti-trash"></i></a></td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="amz_pagination_wrapper">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock %}