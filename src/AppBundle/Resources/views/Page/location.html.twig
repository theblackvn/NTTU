{% block body %}
    <div class="container">
        <div class="row">
            <aside id="sidebar" class="col-md-3 col-sm-4 mb-3">
                {#<div class="heading p-4">#}
                    {#<h2>Lorem ipsum</h2>#}
                    {#<h3>Lorem ipsum dolor sit amet</h3>#}
                    {#<ul class="list-unstyled">#}
