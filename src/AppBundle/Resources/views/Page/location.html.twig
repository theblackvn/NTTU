                {#</article>#}
                <article class="p-4 feature-event">
                    <h4 class="heading-2 mt-0">Sự kiện nổi bật</h4>
                    {% if events %}
                        <ul class="list-unstyled">
                            {% for event in events %}
                                <li class="media event">
                                    <div class="d-flex align-items-start mr-3 thumb btn-transparent">
                                            <span class="inner text-center w-100">
                                                {{ event.startDate|date('M') }}<br>
                                                <b class="link blue">{{ event.startDate|date('d') }}</b>
                                            </span>
                                    </div>
                                    <div class="media-body">
                                        <a class="c-black text-underline" href="{{ path('application_event_detail', {'slug':event.slug}) }}">{{ event.title|raw }}</a></h5>
                                        <p class="c-lime-a5 mt-2"><i class="fa fa-clock-o mr-2" aria-hidden="true"></i>{{ event.startDate|date('h:i') }}</p>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                    {#<a class="c-black" href="#"><i class="fa fa-chevron-circle-right mr-2 c-red"></i>events at NTTU</a>#}
                </article>
                <!-- /sidebar --></aside>

            <section id="content" class="col-md-9 col-sm-8">
                <div class="cate-heading mb-3">
                    <img class="img-fluid" src="{{ category.thumbnail }}" alt="" style="width:100%">
                    <article class="p-4">
                        <h4 class="c-black">{{ category.title|raw }}</h4>
                        <p><span class="c-lime-a5 font-weight-bold"></span>{{ category.excerpt }}</p>
                        <ul class="list-unstyled">
                            <li><a class="c-black font-weight-bold" href="{{ category.link }}"><i class="fa fa-chevron-circle-right mr-2 c-red"></i>{{ category.link }}</a></li>
                        </ul>
                    </article>
                    <!-- /heading --></div>

                {#<h3 class="heading-3">Heading text - Lorem ipsum dolor sit amet!</h3>#}
                {% for post in posts %}
                    <article class="media sub-cate">
                        <figure class="thumb mb-0 mr-3"><img class="d-flex img-fluid" src="{{ post.thumbnail }}" alt="Generic placeholder image"></figure>
                        <div class="media-body">
                            <h5 class="title mt-0"><a href="#">{{ post.title|raw }}</a></h5>
                            {#<b class="text-underline">Sub category descriptions :</b>#}
                            {{ post.content|raw }}

                        </div>
                    </article>
                {% endfor %}



                <!-- /content --></section>
        </div>
        <!-- /container --></div>
{% endblock %}
