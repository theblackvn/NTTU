{% set school = current_school() %}
<form action="{{ path('application_for_school_doEditClass', {'id': class.id}) }}" class="edit-class-form"
      method="post" novalidate>
    <div class="alert alert-danger" role="alert" style="display: none;">
        <strong>Lỗi!</strong> <span class="error-msg"></span>
    </div>
    <div class="form-group">
        <div class="s-name">
            <div class="avatar" style="background-image: url('{{ asset('frontend/') }}images/av.png')"></div>
            <div class="name">{{ school.name }}</div>
        </div>
    </div>
    <div class="form-group">
        <input name="code" value="{{ class.code }}" type="text" class="form-control" id="class-code" placeholder="Mã Lớp"
               autocomplete="off" required>
    </div>
    <div class="form-group">
        <select name="schoolUnit" class="chosen" data-placeholder="Khối lớp" style="width:100%;"
                tabindex="1">
            {% set schoolUnits = get_school_units() %}
            {% for item in schoolUnits %}
                <option {% if class.schoolClassUnit.id == item.id %}selected{% endif %} value="{{ item.id }}">{{ item.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-group">
        <input name="name" value="{{ class.name }}" type="text" class="form-control" id="class-name"
               placeholder="Tên Lớp"
               autocomplete="off" required>
    </div>
    <div class="form-group">
        <select name="schoolYear" class="chosen" data-placeholder="Năm học" style="width:100%;"
                tabindex="1">
            {% set schoolYears = get_school_years() %}
            {% for item in schoolYears %}
                <option {% if class.schoolYear.id == item.id %}selected{% endif %} value="{{ item.id }}">{{ item.name }}</option>
            {% endfor %}
        </select>
    </div>
    <div class="form-action">
        <button class="nuti-button white btn-submit-form" type="button">
            <i class="fa fa-spin fa-spinner" style="display: none"></i> Chỉnh sửa lớp
        </button>
    </div>
</form>