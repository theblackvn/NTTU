{% set school = current_school() %}
<form action="{{ path('application_for_school_doEditStudent', {'id': class.id, 'profileId': profile.id}) }}" class="edit-student-form"
      method="post" novalidate>
    <div class="alert alert-danger" role="alert" style="display: none;">
        <strong>Lỗi!</strong> <span class="error-msg"></span>
    </div>
    <div class="form-group">
        <div class="s-name">
            <div class="avatar" style="background-image: url('{{ asset('frontend/') }}images/av.png')"></div>
            <div class="name">{{ school.name }} - {{ class.name }}</div>
        </div>
    </div>
    <div class="form-group">
        <input readonly name="code" value="{{ profile.profileId }}" type="text" class="form-control" id="class-code" placeholder="Mã Học sinh"
               autocomplete="off" required>
    </div>
    <div class="form-group">
        <input name="name" value="{{ profile.name }}" type="text" class="form-control" id="profile-name"
               placeholder="Tên học sinh"
               autocomplete="off" required>
    </div>
    <div class="form-group">
        <input name="dateOfBirth" value="{{ profile.dateOfBirth | date('d/m/Y') }}" type="text" class="form-control" id="profile-dateOfBirth"
               placeholder="Ngày sinh"
               autocomplete="off" required>
    </div>
    <div class="form-group">
        <select name="gender" class="chosen" data-placeholder="Giới tính" style="width:100%;"
                tabindex="1">
            {% set male = constant('\\AMZ\\ProfileBundle\\Entity\\Profile::GENDER_MALE') %}
            {% set female = constant('\\AMZ\\ProfileBundle\\Entity\\Profile::GENDER_FEMALE') %}
            <option {% if profile.gender == male %}selected{% endif %} value="{{ male }}">Nam</option>
            <option {% if profile.gender == female %}selected{% endif %} value="{{ female }}">Nữ</option>
        </select>
    </div>
    <div class="form-group">
        <input name="address" value="{{ profile.address }}" type="text" class="form-control" id="profile-address"
               placeholder="Địa chỉ"
               autocomplete="off">
    </div>
    <div class="form-group">
        <input name="email" value="{{ profile.email }}" type="email" class="form-control" id="profile-email"
               placeholder="Email"
               autocomplete="off">
    </div>
    <div class="form-group">
        <input name="phone" value="{{ profile.phone }}" type="text" class="form-control" id="profile-phone"
               placeholder="Điện thoại"
               autocomplete="off">
    </div>
    <div class="form-action">
        <button class="nuti-button white btn-submit-form" type="button">
            <i class="fa fa-spin fa-spinner" style="display: none"></i> Chỉnh sửa
        </button>
    </div>
</form>