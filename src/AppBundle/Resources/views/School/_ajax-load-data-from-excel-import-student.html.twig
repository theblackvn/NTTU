<div class="clearfix" style="overflow-x: scroll; overflow-y: auto;; width: 100%; height: 300px;">
    <table class="table table-bordered table-responsive" style="table-layout: fixed">
        <thead>
        <tr>
            <th width="50" class="text-right">STT</th>
            <th width="100">Trạng thái</th>
            <th width="100">Mã HS</th>
            <th width="150">Tên HS</th>
            <th width="110">Ngày sinh</th>
            <th width="80">Giới tính</th>
            <th width="200">Ghi chú</th>
        </tr>
        </thead>
        <tbody>
        {% for item in data %}
            {% set value = item.row %}
            <tr>
                <td class="text-right">{{ loop.index }}</td>
                <td>
                    {% if 0 == item.status %}
                        <span class="label label-danger">Lỗi</span>
                    {% else %}
                        <span class="label label-success">Hợp lệ</span>
                    {% endif %}
                </td>
                <td>{{ value[0] }}</td>
                <td>{{ value[1] }}</td>
                <td>{{ value[2] }}</td>
                <td>{{ value[3] }}</td>
                <td>{{ item.message }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>